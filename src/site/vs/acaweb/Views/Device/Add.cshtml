@model ACAPackagesListener.API.Models.Entities.Device

@{
    ViewBag.Title = "Add";
}
<style>
    body {
        margin: 0;
        padding: 0;
    }
    #content{
        margin: 0;
        padding: 0;
    }
    .editor-label {
        margin: 0;
    }
</style>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Ip)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ip)
            @Html.ValidationMessageFor(model => model.Ip)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LatLng)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LatLng, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.LatLng)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Activo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Activo)
            @Html.ValidationMessageFor(model => model.Activo)
        </div>
        <div class="editor-field">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </fieldset>
}