@{
    ViewBag.Title = "Gráficas de datos";
}

<div class="row-fluid">
    <form class="well form-inline">
        <fieldset>
            <table>
                <tr>
@*                    <td><select id="MAC"><option value="">--Seleccionar Dispositivo--</option></select></td>*@
                    <td><input type="text" id="startDate" placeholder="Fecha Inicial(dd/mm/yyyy)"/></td>
                    <td><input type="text" id="endDate" placeholder="Fecha Final(dd/mm/yyyy)"/></td>
                    <td><button type="button" value="Filtrar" id="btnFilter" class="btn btn-primary">Filtrar</button></td>
                </tr>
                <tr>
@*                    <td></td>*@
                    <td><span id="startDateError" class="error"></span></td>
                    <td><span id="endDateError" class="error"></span></td>
                    <td></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>
<div class="row-fluid">
    <div class="span6">
        <canvas id="bars" height="500" width="500"></canvas>
    </div>
    <div class="span4">
        <canvas id="pie" width="400" height="400"></canvas>
    </div>
    <div class="span2">
        <ul id="piePiecesNames"></ul>
    </div>
</div>
