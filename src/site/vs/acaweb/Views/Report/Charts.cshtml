@{
    ViewBag.Title = "Gráficas de datos";
}

<div class="row-fluid">
    <form class="form-inline">
        <fieldset>
            <table>
                <tr>
                    <td>Desde <input type="text" id="startDate" placeholder="dd/mm/yyyy" class="input-small"/></td>
                    <td><input type="time" id="startTime" class="input-small"/></td>
                    <td>Hasta <input type="text" id="endDate" placeholder="dd/mm/yyyy" class="input-small"/></td>
                    <td><input type="time" id="endTime" class="input-small"/></td>
                    <td><button type="button" value="Filtrar" id="btnFilter" class="btn btn-primary">Filtrar</button></td>
                </tr>
                <tr>
                    <td colspan="2"><span id="startDateError" class="error"></span></td>
                    <td colspan="2"><span id="endDateError" class="error"></span></td>
                    <td></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>
<div class="row-fluid">
    <p id="report-range"></p>
</div>
<div class="row-fluid">
    <div class="span6">
        <canvas id="bars" height="500" width="500"></canvas>
    </div>
    <div class="span4">
        <canvas id="pie" width="400" height="400"></canvas>
    </div>
    <div class="span2">
        <ul id="piePiecesNames"></ul>
    </div>
</div>
