@model ACAPackagesListener.API.Models.Entities.MallMap
@{
    Layout = null;
}

<div class="modal-dialog modal-sm">
    <div class="modal-content">
        <div class="modal-body">
        @using (Html.BeginForm("Add", "Map", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "$('#btnAddMap').attr('disabled', 'disabled');" }))
        {
            @Html.ValidationSummary(true)
            <div class='form-group'>
                <label for="Name">Nombre del mapa</label>
                @Html.TextBoxFor(model => model.Name, new { placeholder = "Nombre del mapa", @class="form-control"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class='form-group'>
                <label for="description">Descripción</label>
                @Html.TextAreaFor(model => model.Description,new { placeholder = "Descripción", @class="form-control"})
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class='form-group'>
                @Html.CheckBoxFor(model => model.Selected, new {@class="chk-selected"})
                <label for="Selected">Mapa Seleccionado</label>
                @Html.ValidationMessageFor(model => model.Selected)
            </div>
            <div class="form-group">
                <input type="file" name="mapfile"/>
            </div>
            <p>
                <input id="btnAddMap" type="submit" value="Agregar mapa" class="btn btn-primary" />
            </p>
        }
        </div>
    </div>
</div>